                <rating_label></rating_label>
                <displaycode></displaycode>
                <fq></fq>
            </jmango_rest_bazaarvoice_settings>
            <jmango_rest_developer_settings>
                <enable>0</enable>
                <exclude_modules><![CDATA[TIG_PostNL
Chronopost_Chronorelais]]></exclude_modules>
            </jmango_rest_developer_settings>
        </japi>
    </default>
</config>
